<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d %5p [%t] [%c:%L] - %m%n%ex
            </pattern>
        </encoder>
    </appender>

    <logger name="com.ethlo" level="DEBUG"/>

    <root level="INFO">
        <appender-ref ref="stdout"/>
    </root>

</configuration>